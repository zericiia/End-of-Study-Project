<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'نظام اختيار مشاريع التخرج' %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Tajawal:wght@300;400;500;700&display=swap');
        body {
            font-family: 'Tajawal', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen">
    <% if (typeof user !== 'undefined') { %>
        <%- include('partials/navbar') %>
    <% } %>
    
    <div class="container mx-auto px-4 py-8">
        <% if (typeof messages !== 'undefined' && messages.success) { %>
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
                <span class="block sm:inline"><%= messages.success %></span>
            </div>
        <% } %>
        
        <% if (typeof messages !== 'undefined' && messages.error) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                <span class="block sm:inline"><%= messages.error %></span>
            </div>
        <% } %>
        
        <%- body %>
    </div>
    
    <footer class="bg-white py-6 mt-12 border-t">
        <div class="container mx-auto px-4 text-center text-gray-600">
            <p>© <%= new Date().getFullYear() %> نظام اختيار مشاريع التخرج</p>
        </div>
    </footer>
</body>
</html>